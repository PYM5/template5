<!-- NAVBAR ARRONDIE sur 11/12 de la largeur de l'écran -->

<div class="fixed z-50 w-full ">

  <!-- AFFICHAGE DESKTOP affichée quand la résolution est supérieure à la valeur de custombp (Tailwind.config.js) -->
  <nav class="custombp:hidden block min-w-max">
    <div class="bg-white flex w-11/12 mx-auto mt-4 px-5 py-2 gap-4 shadow-md rounded-full bg-opacity-50 border-1 border-gray-500 border-solid">
      <div class="justify-start">
        <div class="flex flex-nowrap space-x-2">
          <img src="<%= asset_path('logo.png') %>" alt="logo" class="w-9 h-9">
          <h1 class="font-meow-script text-4xl font-extrabold text-pink-500 text-nowrap">Lilly Rose</h1>
        </div>
      </div>
      <div class="flex-grow ">
        <div class="h-full flex flex-nowrap space-x-5 justify-center items-center">
          <%= link_to 'Accueil' , root_path, class:'hover:border-b-2 hover:border-pink-500' %>
          <%= link_to 'Nos Services' , services_path, class:'hover:border-b-2 hover:border-pink-500' %>
          <%= link_to 'Qui nous sommes' , company_path, class:'hover:border-b-2 hover:border-pink-500' %>
          <%= link_to 'Contact' , contact_path, class:'hover:border-b-2 hover:border-pink-500' %>
        </div>
      </div>
      <div class="justifiy-end">
        <img src="<%= asset_path('utilisateur.png') %>" alt="login" class="w-10 h-10">
      </div>
    </div>
  </nav>

  <!-- AFFICHAGE MOBILE affichée quand la résolution est inférieure à la valeur de custombp (Tailwind.config.js) -->
  <nav class="custombp:block hidden min-w-max">
    <div class="bg-white flex w-11/12 mx-auto mt-4 px-5 py-2 gap-4 shadow-md rounded-full bg-opacity-50 border-1 border-gray-500 border-solid">
      <div class="justify-start content-center">
        <i class="fa-solid fa-bars text-2xl text-pink-500 cursor-pointer" onclick="toggleMenu()"></i>
      </div>
      <div class="flex-grow">
        <div class="h-full flex flex-nowrap space-x-2 justify-center items-center">
          <img src="<%= asset_path('logo.png') %>" alt="logo" class="w-9 h-9">
          <h1 class="font-meow-script text-4xl font-extrabold text-pink-500 text-nowrap">Lilly Rose</h1>
        </div>
      </div>
      <div class="justifiy-end">
        <img src="<%= asset_path('utilisateur.png') %>" alt="login" class="w-10 h-10">
      </div>
    </div>
  </nav>
</div>


<!-- MENU DEROULANT DE L'ICONE BURGER -->
<div id="homeMenu" class="hidden fixed w-11/12 left-1/2 -translate-x-1/2 mt-20 z-40 shadow-md rounded-3xl bg-white bg-opacity-50 border-1 border-gray-500 border-solid">
  <ul class="py-4">
    <li>
      <a href="<%= root_path %>" class="block px-4 py-2 text-gray-800 hover:bg-gray-300">Accueil</a>
    </li>
    <li>
      <a href="<%= services_path %>" class="block px-4 py-2 text-gray-800 hover:bg-gray-300">Nos Services</a>
    </li>
    <li>
      <a href="<%= company_path %>" class="block px-4 py-2 text-gray-800 hover:bg-gray-300">Qui nous sommes</a>
    </li>
    <li>
      <a href="<%= contact_path %>" class="block px-4 py-2 text-gray-800 hover:bg-gray-300">Contact</a>
    </li>
  </ul>
</div>
